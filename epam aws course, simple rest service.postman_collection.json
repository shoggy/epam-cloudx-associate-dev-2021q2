              "    pm.response.to.have.status(200);\r",
              "});\r",
              "pm.test(\"Your test name\", function () {\r",
              "    var expected = pm.collectionVariables.get('createdProduct');\r",
              "    var jsonData = pm.response.json();\r",
              "    pm.expect(jsonData.some(e => JSON.stringify(e) === JSON.stringify(expected))).to.be.true;\r",
              "});\r",
              ""
            ],
            "type": "text/javascript"
          }
        }
